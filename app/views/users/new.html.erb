<h1>Create New Account</h1>

<% if flash[:errors] %>
    <ul>
        <% flash[:errors].each do |error| %>
            <li style ="color: red"> <%= error%> </li>
        <% end %>
    </ul>
<%end%>

<%= form_with model: @user do |f|%>

    <%= f.label :name %>
    <%= f.text_field :name %> 

    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label "Password" %>
    <%= f.text_field :password_digest %>

    <%= f.submit %>

<% end %>