<br>
<div class="container">
    <h1>Add New Tag</h1>
    
        <%= form_for @tag, :html => {:class => "form-horizontal center"} do |f| %>

            <br>

            <div class="form-group">
                <%= f.label :name, class: "col-md-4 control-label" %>
                <%= f.text_field :name, class: "form-control"%>
            </div>
            <br>

            <br>

            <%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
        <% end %>

</div>