<br>
<div class="container">
    <h1>Add New Contact</h1>
    
        <%= form_for @contact, :html => {:class => "form-horizontal center"} do |f| %>

            <div class="form-group">
            <%= f.label :company_name, class: "col-md-4 control-label"  %>
            <%= f.text_field :company_name, list: "companies_autocomplete", class: "form-control" %>
            <datalist id="companies_autocomplete">
                <% Company.all.each do |company| %>
                    <option value="<%= company.name %>">
                <% end %>
            </datalist>
            </div>
            <br>

            <div class="form-group">
                <%= f.label :first_name, class: "col-md-4 control-label" %>
                <%= f.text_field :first_name, class: "form-control"%>
            </div>
            <br>

            <div class="form-group">
                <%= f.label :last_name, class: "col-md-4 control-label" %>
                <%= f.text_field :last_name, class: "form-control"%>
            </div>
            <br>

            <div class="form-group">
                <%= f.label :title, class: "col-md-4 control-label" %>
                <%= f.text_field :title, class: "form-control"%>
            </div>
            <br>

            <div class="form-group">
                <%= f.label :email, class: "col-md-4 control-label" %>
                <%= f.text_field :email, class: "form-control"%>
            </div>
            <br>

            <div class="form-group">
                <%= f.label :phone, class: "col-md-4 control-label" %>
                <%= f.text_field :phone, class: "form-control"%>
            </div>
            <br>

            <div class="form-group">
                <%= f.label :notes, class: "col-md-4 control-label" %>
                <%= f.text_area :notes, class: "form-control"%>
            </div>
            <br>

            <%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
        <% end %>

</div>